"{{name.value}}": {
  "$anchor": "#v0/{{name.value}}",
  "additionalProperties": false,
  "properties": {
    {{#join fields "," ~}}
    "{{name.value}}" : {
      {{#if description}}
      "description": "{{description.value}}",
      {{/if}}
      {{#withAnnotation "discriminant"}}
      "enum": [{{arguments.0.value.value}}]
      {{else}}
      {{> expand-type type }}
      {{/withAnnotation}}
    }
    {{~/join}}
  },
  "required": [
      {{~#each fields~}}
        {{#withAnnotation 'required'}}"{{../name.value}}",{{/withAnnotation}}
      {{~/each~}}
  ]
},
