---
version: 0
host:
  timeout: 100
  allow_latest: true
  mesh:
    enabled: true
    address: 127.0.0.1
network:
  collections:
    - namespace: auth
      kind: WaPC
      reference: REGISTRY_TODO.azurecr.io/vino/auth:latest
      # reference: ./build/vino_auth_s.wasm
    - namespace: authdb
      kind: Mesh
      reference: authdb
    # - namespace: authdb
    #   kind: GrpcUrl
    #   reference: http://127.0.0.1:36147
  schematics:
    - name: create-user
      collections:
        - auth
      instances:
        create_user:
          id: auth::create-user
        uuid:
          id: wafl::rand::uuid
        rand:
          id: wafl::rand::bytes
      connections:
        - <core>[seed] => uuid[seed]
        - uuid[output] => create_user[user_id]
        - <core>[seed] => create_user[seed]
        - <> => create_user[password]
        - <> => create_user[username]
        - <link>[authdb] => create_user[kv]
        - create_user[user_id] => <>
