# yaml-language-server: $schema=../wick/crates/wick/wick-config/json-schema/manifest.json
---
kind: wick/app@v1
name: candle_website
resources:
  - name: http
    resource:
      kind: wick/resource/tcpport@v1
      port: 8080
      address: 0.0.0.0
import:
  - name: api
    component:
      kind: wick/component/manifest@v1
      ref: ./app-http-component/api.wick
triggers:
  - kind: wick/trigger/http@v1
    resource: http
    routers:
      - kind: wick/router/raw@v1
        path: /v1
        codec: Json
        operation: api::handler
