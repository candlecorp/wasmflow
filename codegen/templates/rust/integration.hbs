#[derive(Default, Copy, Clone)]
#[allow(missing_debug_implementations)]
pub struct ComponentDispatcher {}

#[cfg(target_arch = "wasm32")]
#[allow(clippy::too_many_lines)]
{{#if stateful}}
impl wasmflow_sdk::sdk::stateful::WasmDispatcher for ComponentDispatcher {
    type Context = crate::Context;
{{else}}
impl wasmflow_sdk::sdk::ephemeral::WasmDispatcher for ComponentDispatcher {
{{/if}}
  fn dispatch(
    &self,
    op: &'static str,
    payload: &'static [u8],
    {{#if stateful}}
    context: Self::Context,
    {{/if}}
    ) -> CallResult {
    Box::pin(async move {
      let (mut stream, id) = match op {
        {{#each interface.components}}
          "{{name}}" => crate::components::generated::{{moduleName name}}::Component::default().execute(wasmflow_sdk::sdk::payload::from_buffer(payload)?, {{#if @root.stateful}}context,{{/if}}).await,
        {{/each}}
        {{#each interface.wellknown}}
          {{#each schema.components}}
            "{{name}}" => crate::components::generated::{{moduleName name}}::Component::default().execute(wasmflow_sdk::sdk::payload::from_buffer(payload)?, {{#if @root.stateful}}context,{{/if}}).await,
          {{/each}}
        {{/each}}
        _ => Err(wasmflow_sdk::error::Error::ComponentNotFound(
                    op.to_owned(),
                    ALL_COMPONENTS.join(", "),
                ).into()),
      }?;
      while let Some(next) = wasmflow_sdk::sdk::StreamExt::next(&mut stream).await {
        wasmflow_sdk::sdk::wasm::port_send(&next.port, id, next.payload)?;
      }

      Ok(Vec::new())
    })
  }
}


