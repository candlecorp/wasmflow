#[allow(unused)]
static  ALL_COMPONENTS: &[&str] = &[
{{#each interface.components}}"{{name}}",{{/each}}
{{#each interface.wellknown}}
  {{#each schema.components}}"{{name}}",{{/each}}
{{/each}}
